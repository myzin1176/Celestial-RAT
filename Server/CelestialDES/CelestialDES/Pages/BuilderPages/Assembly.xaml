<Page x:Class="CelestialDES.Pages.BuilderPages.Assembly"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CelestialDES.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="General">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid>
            <TextBlock Text="Assembly" Foreground="{DynamicResource PrimaryTextColor}" FontFamily="Segoe UI" FontWeight="Bold" FontSize="14" Margin="5,16,506,415"/>

            <CheckBox Width="12" Height="12" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,35,0,-3" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
            <TextBlock Text="Change icon" Foreground="{DynamicResource PrimaryTextColor}" FontFamily="Segoe UI" FontSize="12" Margin="20,33,429,386"/>
            <Image Name="imageIcon" Width="50" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,52,0,0"/>

            <CheckBox Width="12" Height="12" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="105,35,0,-3" Checked="CheckBox1_Checked" Unchecked="CheckBox1_Unchecked"/>
            <TextBlock Text="Copy signature" Foreground="{DynamicResource PrimaryTextColor}" FontFamily="Segoe UI" FontSize="12" Margin="120,33,367,386"/>
            <TextBlock Text="python must be installed in order to use" Foreground="Red" FontFamily="Segoe UI" FontSize="9" Margin="105,46,352,386"/>

            <TextBlock Text="Product: " VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="{DynamicResource PrimaryTextColor}" FontFamily="Segoe UI" FontSize="14" Margin="5,107,0,0"/>
            <TextBox x:Name="ProductText" Text="" Foreground="{DynamicResource PrimaryTextColor}" FontSize="13" Height="30" VerticalAlignment="Top" Margin="100,102,5,0"/>
            <TextBlock Text="Description: " VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="{DynamicResource PrimaryTextColor}" FontFamily="Segoe UI" FontSize="14" Margin="5,147,0,0"/>
            <TextBox x:Name="DescriptionText" Text="" Foreground="{DynamicResource PrimaryTextColor}" FontSize="13" Height="30" VerticalAlignment="Top" Margin="100,142,5,0"/>
            <TextBlock Text="Company: " VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="{DynamicResource PrimaryTextColor}" FontFamily="Segoe UI" FontSize="14" Margin="5,187,0,0"/>
            <TextBox x:Name="CompanyText" Text="" Foreground="{DynamicResource PrimaryTextColor}" FontSize="13" Height="30" VerticalAlignment="Top" Margin="100,182,5,0"/>
            <TextBlock Text="Copyright: " VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="{DynamicResource PrimaryTextColor}" FontFamily="Segoe UI" FontSize="14" Margin="5,227,0,0"/>
            <TextBox x:Name="CopyrightText" Text="" Foreground="{DynamicResource PrimaryTextColor}" FontSize="13" Height="30" VerticalAlignment="Top" Margin="100,222,5,0"/>
            <TextBlock Text="TradeMarks: " VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="{DynamicResource PrimaryTextColor}" FontFamily="Segoe UI" FontSize="14" Margin="5,267,0,0"/>
            <TextBox x:Name="TradeMarksText" Text="" Foreground="{DynamicResource PrimaryTextColor}" FontSize="13" Height="30" VerticalAlignment="Top" Margin="100,262,5,0"/>
            <TextBlock Text="Original name: " VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="{DynamicResource PrimaryTextColor}" FontFamily="Segoe UI" FontSize="14" Margin="5,307,0,0"/>
            <TextBox x:Name="OriginalFNText" Text="" Foreground="{DynamicResource PrimaryTextColor}" FontSize="13" Height="30" VerticalAlignment="Top" Margin="100,302,5,0"/>
            <TextBlock Text="Product Ver: " VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="{DynamicResource PrimaryTextColor}" FontFamily="Segoe UI" FontSize="14" Margin="5,347,0,0"/>
            <TextBox x:Name="PVerText" Text="0.0.0.0" Foreground="{DynamicResource PrimaryTextColor}" FontSize="13" Height="30" VerticalAlignment="Top" Margin="100,342,5,0"/>
            <TextBlock Text="File Version: " VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="{DynamicResource PrimaryTextColor}" FontFamily="Segoe UI" FontSize="14" Margin="5,387,0,0"/>
            <TextBox x:Name="FVerText" Text="0.0.0.0" Foreground="{DynamicResource PrimaryTextColor}" FontSize="13" Height="30" VerticalAlignment="Top" Margin="100,382,5,0"/>
            <Button Click="Clone_Click" Height="20" Width="100" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="14" Margin="0,420,5,0" Content="Clone" Foreground="{DynamicResource PrimaryTextColor}"/>
        </Grid>
    </Border>
</Page>