<Page x:Class="CelestialDES.Pages.BuilderPages.Final"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CelestialDES.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="General">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid>
            <CheckBox x:Name="metroCheckBox5" Width="12" Height="12" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,122" Checked="metroCheckBox5_Checked"/>
            <TextBlock Text="Compress result" Foreground="{DynamicResource PrimaryTextColor}" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="12" Margin="20,0,0,125"/>

            <CheckBox x:Name="metroCheckBox2" Width="12" Height="12" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,86" Checked="metroCheckBox2_Checked" Unchecked="metroCheckBox2_Unchecked"/>
            <TextBlock Text="Disable the install prompt" Foreground="{DynamicResource PrimaryTextColor}" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="12" Margin="20,0,0,89"/>

            <CheckBox x:Name="metroCheckBox3" Width="12" Height="12" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,50"/>
            <TextBlock Text="Protect Assembly" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryTextColor}" FontFamily="Segoe UI" FontSize="12" Margin="20,0,0,53"/>

            <CheckBox x:Name="metroCheckbox1337" Width="12" Height="12" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,80,121"/>
            <TextBlock Text="Pump file size" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="{DynamicResource PrimaryTextColor}" FontFamily="Segoe UI" FontSize="12" Margin="0,0,5,123"/>
            <TextBox x:Name="junkmodifier" MaxLength="7" Width="200" Height="26" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,72" Text="1" Foreground="{DynamicResource PrimaryTextColor}" Background="{DynamicResource SecundaryBackgroundColor}" FontSize="10" PreviewTextInput="junkmodifier_PreviewTextInput"/>

            <TextBlock x:Name="status" VerticalAlignment="Bottom" HorizontalAlignment="Center" Text="Waiting for user input..." Margin="5" Foreground="{DynamicResource PrimaryTextColor}" FontFamily="Segoe UI" FontSize="12"/>

            <CheckBox x:Name="metroCheckBox4" Width="12" Height="12" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,70,0,-3"/>
            <TextBlock Text="Save Configuration after building" Foreground="{DynamicResource PrimaryTextColor}" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="12" Margin="20,68,0,-3"/>

            <Button Click="Build_Click" VerticalAlignment="Center" Height="30" FontSize="14" Margin="5,0,5,0" Content="Build the stub" Foreground="{DynamicResource PrimaryTextColor}"/>
            <Button HorizontalAlignment="Right" Click="LoadPreset_Click" Height="30" Width="200" FontSize="14" Margin="5,75,5,0" Content="Load latest saved settings" Foreground="{DynamicResource PrimaryTextColor}"/>
            <Button HorizontalAlignment="Right" Click="Button_Click" Height="30" Width="200" FontSize="14" Margin="5,140,5,0" Content="Scripts manager" Foreground="{DynamicResource PrimaryTextColor}"/>
        </Grid>
    </Border>
</Page>